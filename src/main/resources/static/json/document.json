		"Method": "GET",
		"Body Example": "none",
		"Noted": "nothing"
	},
	"CreateTypeProduct": {
		"Description": "Thêm mới typeProduct",
		"Path": "/api/v1/typeproduct/typeproducts",
		"Method": "POST",
		"Body Example": {
			"label": "Trạng thái",
			"code": "trang-thai",
			"isToggle": false,
			"leaf": ["urbas","online-only"]
		},
